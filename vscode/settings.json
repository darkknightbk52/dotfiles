{
    "vim.useSystemClipboard": true,
    "vim.leader": ",",
    "vim.camelCaseMotion.enable": true,
    "vim.easymotion": true,
    "vim.gdefault": true,
    "vim.highlightedyank.enable": true,
    "vim.hlsearch": true,
    "vim.matchpairs": "(:),{:},[:],<:>",
    "vim.shell": "/usr/bin/zsh",
    "vim.smartRelativeLine": true,
    "vim.insertModeKeyBindingsNonRecursive": [
        {
            "before": ["j", "j"],
            "after": ["<Esc>"]
        },
        {
            "before": ["j", "k"],
            "after": ["<Esc>"]
        }
    ],
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": ["<C-l>"],
            "commands": [":nohl"]
        },
        {
            "before": ["j"],
            "after": ["g", "j"]
        },
        {
            "before": ["k"],
            "after": ["g", "k"]
        },
        {
            "before": ["<leader>", "v"],
            "after": ["V", "`", "]", "k"]
        },
        {
            "before": ["<leader>", ";"],
            "after": ["A", ";", "<Esc>", "^"]
        },
        {
            "before": ["<space>", "'"],
            "commands": ["workbench.action.terminal.toggleTerminal"]
        }
    ],
    "vim.handleKeys": {
        "<C-k>": false,
        "<C-t>": false
    }
}
